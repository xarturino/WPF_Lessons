<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Button Background="Red" Content="Red"/>
            <Button Background="Yellow" Content="Yellow"/>
            <Button Background="Green" Content="Green"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Background="Red" MinWidth="30"/>
            <Button Background="Yellow" MinWidth="30"/>
            <Button Background="Green" MinWidth="30"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Background="Red" MinWidth="30"/>
                <Button Background="Yellow" MinWidth="30"/>
                <Button Background="Green" MinWidth="30"/>
            </StackPanel>
    </Grid>
</Window>
