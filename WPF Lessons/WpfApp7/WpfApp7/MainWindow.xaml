<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="DockPanel" Height="250" Width="300">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button DockPanel.Dock="Top" Background="AliceBlue" Content="Top Button"/>
            <Button DockPanel.Dock="Top" Background="AliceBlue" Content="Top Button"/>
            <Button DockPanel.Dock="Left" Background="Blue" Content="Left"/>
            <Button DockPanel.Dock="Left" Background="Blue" Content="Left"/>
            <Button DockPanel.Dock="Right" Background="Yellow" Content="Right"/>
            <Button DockPanel.Dock="Bottom" Background="Brown" Content="Bot Button"/>
            <Button Background="Aqua" Content="Center"/>
        </DockPanel>
    </Grid>
</Window>
